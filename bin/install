#!/usr/bin/env bash

set -e

source ~/.bash_profile

root=$(cd "$(dirname $0)"/..;pwd)

if [ -d "$root/venv" ]; then

    rm -rf $root/venv

fi 

python3 -m venv "$root/venv"

"$root/venv/bin/python3" -m pip install --upgrade pip
"$root/venv/bin/pip3" install "git+https://$GH_TOKEN@github.com/squidfunk/mkdocs-material-insiders.git"
"$root/venv/bin/pip3" install -r "$root/requirements.txt"
